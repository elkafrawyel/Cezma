<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/storeItem">

    <ImageView
        android:id="@+id/followingShopImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:alpha="0.9"
        app:layout_constraintTop_toTopOf="@id/followingShopsTitle"
        app:layout_constraintBottom_toBottomOf="@id/followingShopImage"
        app:layout_constraintEnd_toEndOf="@id/followingShopImage"
        app:layout_constraintStart_toStartOf="@id/followingShopImage"/>
    <TextView
        android:id="@+id/followingShopsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="SPEED SHOP"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/followingShopImage"
        app:layout_constraintEnd_toEndOf="@id/followingShopImage"
        app:layout_constraintStart_toStartOf="@id/followingShopImage" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageFollowingShopsItem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/speed_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/closeFollowingShops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/circle_gray"
        android:src="@drawable/ic_close_black_24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/followingShopImage"
        app:layout_constraintTop_toTopOf="@id/followingShopImage" />
</androidx.constraintlayout.widget.ConstraintLayout>