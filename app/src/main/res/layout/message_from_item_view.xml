<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/from_message_rounded"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/from_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:maxWidth="300dp"
        android:padding="4dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/from_time"
        app:layout_constraintLeft_toRightOf="@id/from_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/from_image"
        tools:ignore="RtlHardcoded"
        android:layout_marginBottom="8dp"
        tools:text="Search your product" />

    <TextView
        android:id="@+id/from_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded"
        tools:text="2019-09-24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/from_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:src="@drawable/test_user_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>